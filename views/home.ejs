<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Contact Pro Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>

<div class="container">

    <div class="row">

        <div class="col-10 card shadow mx-auto mt-3">
            <p>Bonjour <%= userLastName %>  <%= userFirstName %></p>
            <div class="card-header text-center bg-dark text-light mt-2">
                <h3>MES CONTACTS</h3>
            </div>

            <div class="my-2">
                <a href="/contact/new" class="float-end btn btn-success my-1">AJOUTER</a>
            </div>

            <div class="card-content">
                <table class="table table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th class="text-center" scope="col">Nom</th>
                        <th class="text-center" scope="col">Prénom</th>
                        <th class="text-center" scope="col">Société</th>
                        <th class="text-center" width="20%" scope="col">Adresse</th>
                        <th class="text-center" scope="col">Tel</th>
                        <th class="text-center" scope="col">Secteur</th>
                        <th class="text-center" scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% contacts.forEach(contact => { %>
                    <tr id="<%= contact._id %>">
                        <td> <%= contact.lastName %> </td>
                        <td> <%= contact.firstName %> </td>
                        <td> <%= contact.company %> </td>
                        <td> <%= contact.address %> </td>
                        <td> <%= contact.phone %> </td>
                        <td> <%= contact.sector %> </td>
                        <td>
                            <a href="/contact/<%= contact._id %>" id="a-view-1" class="btn btn-primary">VOIR</a>
                            <a href="/contact/edit/<%= contact._id %>" id="a-edit-1"
                               class="btn btn-warning">MODIFIER</a>
                            <button id="btn-delete-1" data-id="<%= contact._id %>" class="btn btn-danger btn-delete">
                                SUPPRIMER
                            </button>
                        </td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>

    let btnDeletes = document.querySelectorAll(".btn-delete");

    btnDeletes.forEach((btnDelete) => {
        // ajoute l'évènement click sur chaque bouton 
        btnDelete.addEventListener("click", (e) => {
            if (window.confirm("Voulez vous supprimer la voiture ?")) {
                // redirige vers l'url /contact/delete/id
                window.location.href = "/contact/delete/" + btnDelete.getAttribute("data-id");
            }
        });
    });
</script>
</body>
</html>
